<%= form_with model: spend, url: group_spends_path(@group) do |form| %>
  <% if spend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(spend.errors.count, "error") %> prohibited this spend from being saved:</h2>

      <ul>
        <% spend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field group">
    <%= form.label :group_ids, 'Categories' %>
    <%= form.collection_check_boxes :group_ids, @groups, :id, :name %>
    <%= @groups %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
