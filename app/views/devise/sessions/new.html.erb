<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="auth-header">
  <%= link_to root_path, class: "flex items-center justify-center p-2" do %>
      <i class="fa-solid fa-arrow-left fa-2x"></i>
    <% end %>
  <h2 class="text-lg">LOGIN</h2>
  <%= f.submit "Log in" %>
</div>
  <br>
  <div class="flex items-center justify-center p-2">
  <p class="notice text-solid-green"><%= notice %></p>
  <p class="alert text-red-900"><%= alert %></p>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder:"Password", autocomplete: "current-password", class: 'input-field' %>
  </div>
  <div class="flex flex-col justify-center items-center mt-8">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
     <%= link_to "Forgot password?", new_password_path(resource_name), class: 'text-stone-500' %><br />
   <% end %>
   <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'text-stone-500' %><br />
<% end %>
  </div>
<% end %>

